<!DOCTYPE html>
<html>

<head>
    <title>Subjects</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            margin: 0;
            padding: 0;
        }

        h1 {
            text-align: center;
            margin-top: 50px;
        }

        h2 {
            color: #006699;
            font-size: 24px;
            margin-top: 0px;
            display: inline-block;
        }

        h5 {
            color: #333;
            font-size: 18px;
            display: inline-block;
        }

        .subject-container {
            max-width: 800px;
            margin: 0 auto;
            background-color: #fff;
            border-radius: 5px;
            padding: 20px;
            margin-top: 30px;
            box-shadow: 0 0 10px rgba(0, 0, 0, .2);
        }

        .subject-links {
            margin: 0 0 10px 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
        }

        .code {
            margin: 0 0 10px 0;
        }

        .button-link {
            display: inline-block;
            background-color: #006699;
            color: #fff;
            border: none;
            border-radius: 5px;
            padding: 10px;
            cursor: pointer;
            transition: all 0.3s ease-in-out;
            text-decoration: none;
            margin-right: 5px;
        }

        .delete-container {
            display: flex;
            align-items: center;
            margin-left: 5px;
        }

        .upload-container {
            display: flex;
            align-items: center;
            flex-wrap: wrap;
        }

        .upload-button {
            background-color: #006699;
            color: #fff;
            border: none;
            border-radius: 5px;
            padding: 10px;
            cursor: pointer;
            transition: all 0.3s ease-in-out;
            margin-left: 10px;
        }

        .upload-button:hover {
            background-color: #003d4d;
        }

        .upload-button:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

        .upload-button-label {
            background-color: #006699;
            color: #fff;
            border: none;
            border-radius: 5px;
            padding: 10px;
            cursor: pointer;
            transition: all 0.3s ease-in-out;
            margin-right: 10px;
        }

        .upload-button-label:hover {
            background-color: #003d4d;
        }

        .upload-button-input {
            display: none;
        }

        .delete-button {
            background-color: #f44336;
            color: #fff;
            border: none;
            border-radius: 5px;
            padding: 10px;
            cursor: pointer;
            transition: all 0.3s ease-in-out;
            margin-left: 5px;
        }

        .delete-button:hover {
            background-color: #d32f2f;
        }

        .links-container {
            display: flex;
        }

        @media screen and (max-width: 450px) {
            .subject-links {
                flex-direction: column;
            }
        }
    </style>
</head>

<body>
    <h1>Subjects</h1>
    {{#each subjects }}
    <div class="subject-container">
        <a href="/students?subject={{_id}}">
            <div class="subject-links">
                <div class="subject-name">
                    <h2>{{name}}</h2>
                </div>
                <div class="links-container">
                    <button class="button-link" onclick="location.href='/subjects/{{_id}}/edit';">Edit</button>
                    <div class="delete-container">
                        <form class="delete-form" action="/subjects/{{_id}}?_method=DELETE" method="POST">
                            <button class="delete-button" type="submit"
                                onclick="return confirm('Are you sure you want to delete this subject?')">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="code">
                <h5>Code: {{code}}</h5>
            </div>
            <div class="upload-container">
                <form action="/upload" method="post" enctype="multipart/form-data">
                    <label id="file-label" for="file-input" class="upload-button-label">Choose a file:</label>
                    <input id="file-input" type="file" name="file" accept="application/pdf, application/vnd.ms-excel"
                        class="upload-button-input" onchange="handleFileSelect()">
                    <button id="upload-button" type="submit" class="upload-button" disabled>Upload</button>
                </form>
            </div>
        </a>
    </div>
    {{/each}}

    <script>
        function handleFileSelect() {
            var label = document.getElementById("file-label");
            var fileInput = document.getElementById("file-input");

            if (fileInput.value) {
                var fileName = fileInput.files[0].name;
                label.innerHTML = fileName;
                document.getElementById("upload-button").disabled = false;
            } else {
                label.innerHTML = "Choose a file:";
                document.getElementById("upload-button").disabled = true;
            }
        }
    </script>
</body>

</html>